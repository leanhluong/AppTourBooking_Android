<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitis.FlightActivity">

    <ImageView
        android:id="@+id/flightImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/flight" />

    <TextView
        android:id="@+id/flightName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chuyến bay Hanoi - Ho Chi Minh"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/flightImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/flightDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chi tiết chuyến bay"
        app:layout_constraintTop_toBottomOf="@+id/flightName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Thêm các TextView và các thuộc tính khác ở đây cho chi tiết chuyến bay -->
    <!-- Ví dụ: Mã chuyến bay, Ngày khởi hành, Giờ khởi hành, Hạng vé, Giá vé, vv. -->

    <Button
        android:id="@+id/bookFlightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt vé ngay"
        app:layout_constraintTop_toBottomOf="@+id/flightDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
