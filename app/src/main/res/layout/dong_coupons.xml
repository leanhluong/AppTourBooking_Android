<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgViewCoupons"
        android:layout_width="120dp"
        android:layout_height="120dp"></ImageView>
    <TextView
        android:id="@+id/txtTitleCoupons"
        android:layout_toRightOf="@+id/imgViewCoupons"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:textSize="22dp"
        android:textStyle="bold"
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/txtDescriptionCoupons"
        android:layout_below="@+id/txtTitleCoupons"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imgViewCoupons"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>


</RelativeLayout>